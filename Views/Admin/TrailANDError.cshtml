
@{
    ViewBag.Title = "Try Some Stuff";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<style class="text/css">
    h3 {
        color: blue;
        font-weight: bolder;
    }

    #btnManage {
        background-color: blue;
        color: white;
        font-weight: 700;
        width: 14%;
        font-size: large;
        border-radius: 10px;
    }

    .cursor-ptr {
        cursor: pointer !important;
    }
</style>


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <h3>Staff Management</h3>
            <h5>@HttpContext.Current.Session["LoginID"]</h5>
        </div>
        <div class="col-sm-6">
            <button type="button" id="btnManage" class="btn btn-primary pull-right">Add</button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>First Name : </label>
                                <input type="text" name="FirstName" class="form-control" id="txtfnName" placeholder="First Name" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Last Name : </label>
                                <input type="text" name="LastName" class="form-control" id="txtsndName" placeholder="Last Name" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Qualification : </label>
                                <select class="form-control" id="ddlQualification">
                                    <option value="">Select</option>
                                    <option value="Ba">BA</option>
                                    <option value="Bcom">Bcom</option>
                                    <option value="Bsc">Bsc</option>
                                    <option value="BE">BE</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Subjects : </label>
                                <select class="form-control" id="ddlSubjects">
                                    <option value="">Select</option>
                                    <option value="English">English</option>
                                    <option value="Hindi">Hindi</option>
                                    <option value="Kannada">Kannada</option>
                                    <option value="Science">Science</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Date of Birth : </label>
                                <input type="date" name="DOB" class="form-control" id="txtDOB" placeholder="MM/DD/YYYY" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Age : </label>
                                <text id="txtAge"></text>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label class="form-control-label">Gender : </label>
                                <label class="custom-control custom-radio cursor-ptr">
                                    <input name="gender" class="custom-control-input" type="radio" value="1"><span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Male</span>
                                </label>
                                <label class="custom-control custom-radio cursor-ptr">
                                    <input name="gender" class="custom-control-input" type="radio" value="2"><span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Female</span>
                                </label>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Profle Img : </label>
                                <input style="display:inline-block" type="file" name="Profileimg" value="" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row form-group">
                            <div class="col-sm-8" style=" margin: 18px 0;">
                                <label>Staff ID : </label>
                                <label>Staff001</label>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Email : </label>
                                <input class="form-control" type="email" name="Email" value="" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Contact No : </label>
                                <input class="form-control" type="number" name="ContactNO" value="" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>User ID : </label>
                                <input class="form-control" type="text" name="UserID" value="" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Password : </label>
                                <input class="form-control" type="password" name="Password" value="" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Confirm Password : </label>
                                <input class="form-control" type="password" name="ConfPassword" value="" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-8">
                                <label>Date of Join : </label>
                                <input type="date" name="DOJ" class="form-control" id="txtDOJ" placeholder="MM/DD/YYYY" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
