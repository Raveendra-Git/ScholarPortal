<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon.png" />
    <title>@ViewBag.Title</title>
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdn.materialdesignicons.com/5.4.55/css/materialdesignicons.min.css">
    <link href="~/Content/Custom/Style.css" rel="stylesheet" />
    <style class="text/css">
        .form-control {
            border: 1px solid #000;
            border-radius: 0px;
        }

        #modelViewProfile {
            font-size: 23px !important;
        }

        #imgcredentials {
            width: 122px;
            margin-left: 68px;
            border-radius: 24px;
        }

        #ViewProfile .modal-content {
            border-radius: 0px;
            width: 280px;
            margin-left: 190% !important;
        }

        #ViewProfile.modal {
            position: fixed;
            top: 4px !important;
            right: -301px !important;
        }

        #ViewProfile .modal-dialog {
            width: 295px !important;
            margin: 30px auto !important;
        }

        .topbar {
            background-color: rgb(65 65 228);
            height: 36px;
        }

        body {
            display: block;
            margin-top: 0px;
            margin-right: 2px;
            margin-bottom: 8px;
            margin-left: 2px;
        }

        .logouticon {
            float: right;
            background-color: white;
            margin-right: 10px;
            /*            border-radius: 15px;*/
        }

        .cursor-ptr {
            cursor: pointer;
        }

        .dropdown-menu {
            width: 250px;
            border-radius: 0px !important;
        }

        .lgout {
            text-align: center;
            font-size: 15px;
            border: 5px solid cornflowerblue;
            border-radius: 16px;
            background-color: blanchedalmond;
            color: black;
            font-weight: bold !important;
        }

        #alog {
            font-weight: bold;
        }

            #alog:hover {
                background-color: blue;
                color: white;
                border-radius: 16px;
            }
    </style>
</head>
<body>
    @if (Session["LoginID"].ToString() != "" && Session["LoginID"].ToString() != "0" && Session["LoginID"].ToString() != null)
    {
    <div class="topbar">
        <p class="logouticon">
            @*<i type="button" class="mdi mdi-power m-l-5 btn-sm cursor-ptr" id="modelViewProfile" data-toggle="modal" data-target="#ViewProfile"></i>*@

            <a class="btn btn-default dropdown-toggle" id="alogout" href="" data-toggle="dropdown" data-placement="bottom" data-original-title="Logout" aria-haspopup="true" aria-expanded="false">
                LogOut<i class="mdi mdi-power"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-right">
                <li>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <a href="~/Admin/AddStaff">
                                    <img src="~/Images/ParticipantImg/2/Logo.png" height="100" width="100" />
                                </a>
                            </div>
                            <div class="col-sm-6">
                                <label>@Session["Name"]</label>
                            </div>
                        </div>
                    </div>
                </li>

                <li class="divider"></li>
                <li class="lgout"><a href="#" id="alog">Log Out</a></li>
            </ul>

        </p>


        <p class="logouticon">
            @*<div class="imgrender"> </div>*@
            <button>
                <img src="~/Images/RY_logimg.jpg" width="30" height="30" />
            </button>

        </p>
    </div>
    <!-- Modal Staff-->
    <div class="modal fade" id="ViewProfile" tabindex="-1" role="dialog" aria-labelledby="ViewProfileLabel" @*aria-hidden="true"*@>
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header"></div>
                <div class="modal-body">
                    <div class="">
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <div>
                                    <img src="~/Images/RY_logimg.jpg" id="imgcredentials" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-log-out"><text onclick="fnlogout();"> LogOut</text></span>
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="wizard-content">
        @RenderBody()
    </div>
    }
    else
    {
        Response.Redirect("~/Home/Index");
    }
</body>
</html>


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>

@*<script src="~/Scripts/popper.min.js"></script>*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
@*<script src="~/Scripts/popper.js"></script>*@
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="~/Scripts/jqBootstrapValidation.js"></script>
<script src="https://cdn.bootcss.com/select2/3.4.5/select2.min.js"></script>
<script src="~/Scripts/toast.js"></script>
<script src="~/Scripts/main.js"></script>

<script>
    $(function () {

    });

    function fnlogout() {

        window.location = "Admin/Admin";
    }
</script>